<div class = container>
    
    <div class = "row">
    <div class="col-md-7 offset-md-2">
            <h2><div class="p-3 mb-2 bg-light text-dark">商品一覧</h2>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>商品ID</th>
                        <th>商品名</th>
                        <th>税抜価格</th>
                        <th>ジャンル</th>
                        <th>ステータス</th>
                    </tr>
                </thead>
                
                <tbody>
                  <% @items.each do |item| %>
                    <tr>
                        <td>
                        <%= item.id %>
                        </td>
                        <td class="row justify-content-start">
                    　  <%= link_to admin_item_path(item.id),class:"row justify-content-start" do %>  
                    　  <%= item.name %>
                  　　    <% end %>
                        </td>
                        <td>
                        　<%= item.price %>円
                        </td>
                        <td>
                        　<%= item.genre.name %>
                        </td>
                    　　<% if item.is_active %>
                    　　　<td class="text-success">販売中</td>
                    　　<% else %>
                    　　　<td class="text-secondary">販売停止中</td>
                    　　<% end %>
                    </tr>
                　<% end %>
                </tbody>
            </table>
            </div>
        
     </div>
     
     <div class ="row">
     <%= link_to '新規登録画面へ', new_admin_item_path(@item.id), class: "btn btn-sm btn-success offset-md-2" %> 
     </div>

</div>