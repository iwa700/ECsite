<h2><div class="p-3 mb-2 bg-light text-dark">顧客編集画面</h2>

<%= form_with model: @customer , url:admin_customer_path(@customer.id), method: :patch do |f| %>

      <h4>会員ID</h4>
      <%= @customer.id %>
                    
      
      <h4>氏名</h4>
       <%= f.text_field :last_name %>
       <%= f.text_field :first_name %>
    
      <h4>フリガナ</h4>
       <%= f.text_field :last_name_kana %>
       <%= f.text_field :first_name_kana %>
      
      <h4>郵便番号</h4>
       <%= f.number_field :postal_code %>
       
       <h4>住所</h4>
       <%= f.text_area :address %>
      
      <h4>電話番号</h4>
       <%= f. number_field :telephone_number %>
       
       <h4>メールアドレス</h4>
       <%= f. email_field :email %>
      
      <h4>会員ステータス</h4>
       <%= f.radio_button :is_deleted,false %>有効
       <%= f.radio_button :is_deleted,true %>退会
      

      <%= f.submit "変更を保存", class: "btn btn-sm btn-success " %>
      
 <% end %>







