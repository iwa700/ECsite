<h2><div class="p-3 mb-2 bg-light text-dark">ジャンル一覧・追加</h2>

<%= form_with model: @genre, url:'/admin/genres', method: :post do |f| %>


<h4>ジャンル名</h4>
 <%= f.text_field :name %>

<h4><%= f.submit '新規登録',class: "btn btn-success"  %></h4>

<% end %>


<h4>ジャンル</h4>

<% @genres.each do |genre| %>

  <p>ジャンル名</p>
  <span><%= genre.name %></span>
<%= link_to '編集する', edit_admin_genre_path(genre.id), class: "btn btn-sm btn-success " %>  

<% end %>


  







  
  

 
  





