<h2><div class="p-3 mb-2 bg-light text-dark">配送先登録/一覧</h2>

<table class="table">

　<%= form_with model: @address, url: '/addresses', method: :post do |f| %>

    <thead>
      <tr>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

　　<tbody>
　　  <tr>
　　   <td>
　　       
　　   </td>
　　  </tr>
      <h4>郵便番号(ハイフンなし)</h4>
      <%= f.text_field:postal_code %>
    
      <h4>住所</h4>
      <%= f.text_field :adress %>
    	
      <h4>宛名</h4>
      <%= f.text_field :name %>
    	
      <%= f.submit '新規登録' ,class: "btn btn-sm btn-success " %>
      
  </tbody>
  <% end %>
</table>
  


<table class="table table-bordered">

 <% @addresses.each do |address| %>
 
    <thead>
       <th>郵便番号</th>
       <th>住所</th>
       <th>宛名</th>
       <th></th>
    </thead>
    
    <tbody>
      <tr>
        <td>
          <%= address.postal_code %>
        </td>
        <td>
          <%= address.adress %>
        </td>
        <td>
          <%= address.name %>
        </td>
        <td>
        　<%= link_to '編集する', edit_address_path(address.id), class: "btn btn-sm btn-success " %> 

        　<%= link_to '削除する', address_path(address.id), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-sm btn-danger " %>
        </td>
       </tr>
       
     
     　<% end %> 
     
     </tbody>

</table>


