<h2><div class="p-3 mb-2 bg-light text-dark">編集画面</h2>

<%= form_with model: @customer do |f| %>

  <h4>氏名</h4>
  性<%= f.text_field :last_name %>
  名<%= f.text_field :first_name %>
  
  <h4>フリガナ</h4>
  セイ<%= f.text_area :last_name_kana %>
  メイ<%= f.text_area :first_name_kana %>
  
  <h4>郵便番号</h4>
  <%= f.number_field :postal_code %>
  
  <h4>住所</h4>
  <%= f.text_area :address %>
  
  <h4>電話番号</h4>
  <%= f.number_field :telephone_number %>
  
  <%= f.submit '編集内容を保存' ,class: "btn btn-success" %>

  
<% end %>

<%= link_to '退会する', customers_unsubscribe_path, class: "btn btn-sm btn-success " %> 