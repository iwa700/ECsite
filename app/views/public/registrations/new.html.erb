<h2><div class="p-3 mb-2 bg-light text-dark">新規会員登録画面</h2>

  <%= form_with model: @customer, url: customer_registration_path do |f| %>
  
    <h4>名前</h4>
    <div class="field">
    <%= f.label :last_name %><br>
    <%= f.text_field :last_name %>
    </div>
    
    <div class="field">
    <%= f.label :first_name %><br>
    <%= f.text_field :first_name %>
    </div>
    
    <h4>フリガナ</h4>
    <div class="field">
    <%= f.label :last_name_kana %><br>
    <%= f.text_field :last_name_kana %>
    </div>
    
    <div class="field">
    <%= f.label :first_name_kana %><br>
    <%= f.text_field :first_name_kana %>
    </div>
    
    <h4>メールアドレス</h4>
    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>
    
    <h4>郵便番号</h4>
    <div class="field">
    <%= f.label :postal_code %><br>
    <%= f.number_field :postal_code %>
    </div>
    
    <h4>住所</h4>
    <div class="field">
    <%= f.label :address %><br>
    <%= f.text_field :address %>
    </div>
    
    <h4>電話番号</h4>
    <div class="field">
    <%= f.label :telephone_number %><br>
    <%= f.text_field :telephone_number %>
    </div>
  
    <div class="field">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>
  
    <div class="field">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>
  
    <div class="actions">
      <%= f.submit "新規登録" %>
    </div>
<% end %>


<h2>すでに登録済みの方</h2>
<%= render "devise/shared/links" %>