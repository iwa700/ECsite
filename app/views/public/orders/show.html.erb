<h2><div class="p-3 mb-2 bg-light text-dark">注文履歴詳細画面</h2>


<h5>注文情報</h5>

  <table class="table table-bordered">
    <thead>
      <tr>
        <th>注文日</th>
        <th>配送先</th>
        <th>支払い方法</th>
        <th>ステータス</th>
      </tr>
    </thead>
    <tbody>
          <tr>
            <!-- 注文日 -->
            <td><%= @order.created_at %></td>
            <!-- 配送先 -->
            <td><%= @order.address %></td>
            <!-- 注文商品 -->
            <td><%= @order.payment_method_i18n %></td>
            <!-- 支払金額 -->
            <td>入金確認</td>
          </tr>
    </tbody>
  </table>
    
  <h5>請求情報</h5>
　　<table class="table table-bordered">
      <thead>
        <tr>
          <th>商品合計</th>
          <th>配送料</th>
          <th>ご請求金額</th>
        </tr>
      </thead>
    
      <tbody>
            <tr>
              <!-- 注文日 -->
              <td><%= @order.total_payment - @order.shipping_cost %></td>
              <!-- 配送先 -->
              <td><%= @order.shipping_cost %></td>
              <!-- 注文商品 -->
              <td><%= @order.total_payment  %></td>
           
            </tr>
      </tbody>
    </table>
  

　　<h5>注文内容</h5>
　　
　　<table class="table table-bordered">
        <thead>
          <tr>
            <th>商品</th>
            <th>単価</th>
            <th>個数</th>
            <th>合計</th>
          </tr>
        </thead>
        
        <tbody>
         
          <%  @order.order_details.each do |order_detail| %> 
            <td><%= order_detail.item.name %></td>
            <td><%= order_detail.item.price %></td>
            <td><%= order_detail.amount %></td>
            <td><%= order_detail.item.price * order_detail.amount %></td>
          <% end %>
      
        </tbody>
    </table>